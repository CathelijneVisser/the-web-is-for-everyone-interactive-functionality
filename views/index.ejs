<%- include("./partials/head.ejs") %>
<header>
    <img src="logo.png" alt="Logo">
</header>
<section class="summary">
    
    <h2>smartzones</h2>
    <ul class="smartzones">
        <% smartzones.forEach(smartzone=> { %>
            <li>
                <div class="container-img">
                   <img src="<%= smartzone.image[0].url %>" alt="">
                </div>
                <div class="container-li">
                    <% if (smartzone.reservation==null) { %>
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                            <path
                                d="M19 10C19 11.1819 18.7672 12.3522 18.3149 13.4442C17.8626 14.5361 17.1997 15.5282 16.364 16.364C15.5282 17.1997 14.5361 17.8626 13.4442 18.3149C12.3522 18.7672 11.1819 19 10 19C8.8181 19 7.64778 18.7672 6.55585 18.3149C5.46392 17.8626 4.47177 17.1997 3.63604 16.364C2.80031 15.5282 2.13738 14.5361 1.68508 13.4442C1.23279 12.3522 1 11.1819 1 10C1 7.61305 1.94821 5.32387 3.63604 3.63604C5.32387 1.94821 7.61305 1 10 1C12.3869 1 14.6761 1.94821 16.364 3.63604C18.0518 5.32387 19 7.61305 19 10Z"
                                stroke="#524DD0" stroke-width="2" />
                            <path d="M6 11L9 14L14 7" stroke="#524DD0" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                        Now available
                        <% } else { %>
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                            <path
                                d="M19 10C19 11.1819 18.7672 12.3522 18.3149 13.4442C17.8626 14.5361 17.1997 15.5282 16.364 16.364C15.5282 17.1997 14.5361 17.8626 13.4442 18.3149C12.3522 18.7672 11.1819 19 10 19C8.8181 19 7.64778 18.7672 6.55585 18.3149C5.46392 17.8626 4.47177 17.1997 3.63604 16.364C2.80031 15.5282 2.13738 14.5361 1.68508 13.4442C1.23279 12.3522 1 11.1819 1 10C1 7.61305 1.94821 5.32387 3.63604 3.63604C5.32387 1.94821 7.61305 1 10 1C12.3869 1 14.6761 1.94821 16.364 3.63604C18.0518 5.32387 19 7.61305 19 10Z"
                                stroke="#524DD0" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            <path d="M13 7L10 10M7 13L10 10M10 10L13 13M10 10L7 7" stroke="#524DD0" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round" />
                        </svg>
                        Occupied
                    <% } %>

                    <h3>SZ <%= smartzone.name %></h3>
                    <p><%= smartzone.address %>, <%= smartzone.town %></p>
                    <p><span>Price:</span> â‚¬1,00 / 15 min</p>
                    <% if (smartzone.reservation ==null) { %>
                           <button class="book-now" style="--reserved-bg: #f6f6fc; --reserved-c: #6a6b7b;">Book now</button>
                    <% } else { %>
                        <button class="book-now">Book now</button>
                    <% } %>
                    <button>Book later</button>
                </div>
            </li>

            <article class="detail">
                <img src="<%= smartzone.image.url %>" alt="">
                <header>
                <svg width="24" height="24" xmlns="http://www.w3.org/2000/svg" fill-rule="evenodd" clip-rule="evenodd"><path d="M2.117 12l7.527 6.235-.644.765-9-7.521 9-7.479.645.764-7.529 6.236h21.884v1h-21.883z"/></svg>
                <%= smartzone.address %>
                </header>
                <dl>
                <dt>Name</dt>
                <dd><%= smartzone.address %></dl>
                <dt>Description</dt>
                <dd><%= smartzone.description %></dl>
                <dt>Size</dt>
                <dd><%= smartzone.size %></dl>
                <dt>Utilization</dt>
                <dd><%= smartzone.utilization %></dl>
                </dl>
                <a href="https://www.google.nl/maps/place/<%= smartzone.address %>" target="blank">Bekijken in Google maps</a>
            </article>
        <% }) %>
    </ul>
    
</section>
<%- include("./nav.ejs") %>            
<section class="map">
    <iframe
        src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d1403852.1303614378!2d5.5452458725466895!3d52.24784999850137!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1snl!2snl!4v1678961847765!5m2!1snl!2snl"
        style="border:0;" allowfullscreen="" loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
</section>

